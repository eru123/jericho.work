#!/bin/sh

# Copy all system variable to .env file
printenv > /app/.env

# Start memcached
/usr/bin/memcached -u root -p 11211 -m 64 -c 1024 -P /var/run/memcached/memcached.pid -d

# Migration
/usr/bin/php /migrate

# Load revoked tokens
/usr/bin/php /script load_revoked_tokens

# Run system checks
/usr/bin/php /check

# Start Daemon
/usr/bin/php /app/daemon.php &

# Start apache2
/usr/sbin/httpd -D FOREGROUND
